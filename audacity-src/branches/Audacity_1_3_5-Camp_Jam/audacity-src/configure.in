            dnl Unix
            BUILDLIBS="$BUILDLIBS portmixer/px_unix_oss/portmixer.a"
            EXTRAOBJS="$EXTRAOBJS ../lib-src/portmixer/px_unix_oss/portmixer.a"     
            ;;
      esac
   fi
fi

case "$host_os" in
dnl   darwin* | rhapsody*)
dnl      AC_MSG_WARN([[Not using native lrint() and lrintf() because they are missing on 10.1.]])
dnl      ;;
   *)
