            EXTRAOBJS="$EXTRAOBJS ../lib-src/portmixer/px_mac_core/portmixer.a"     
            ;;
         cygwin*)
            BUILDLIBS="$BUILDLIBS portmixer/px_win_wmme/portmixer.a"
            EXTRAOBJS="$EXTRAOBJS ../lib-src/portmixer/px_win_wmme/portmixer.a"
